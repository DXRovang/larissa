<%= form_for @person do |form| %>

<h3><%= form.label "Name"%></h3>  
<%= form.text_field :name%>

<h3><%= form.label "Title"%></h3>  
<%= form.text_field :title%>

<h3><%= form.label "Agency"%></h3>  
<%= form.text_field :agency%>

<h3><%= form.label "Phone"%></h3>  
<%= form.text_field :phone%>

<h3><%= form.label "Email"%></h3>  
<%= form.text_field :email%>

<h3><%= form.label "Address"%></h3>  
<%= form.text_field :address%>

<h3><%= form.label "Projects"%></h3>  
<%= form.text_field :projects%>

<h3><%= form.label "Materials"%></h3>  
<%= form.text_field :materials%>

<h3><%= form.label "Notes"%></h3>  
<%= form.text_area :notes%>



<%= form.submit "Add Person"%>
<% end %>
